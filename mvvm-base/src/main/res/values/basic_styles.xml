<resources xmlns:android="http://schemas.android.com/apk/res/android">

  <style name="Layout"/>

  <style name="Layout.ActionBar">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">?android:attr/actionBarSize</item>
  </style>

  <style name="Layout.FillWidth">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="Layout.FillHeight">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">match_parent</item>
  </style>

  <style name="Layout.FillWidthHeight">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
  </style>

  <style name="Layout.WrapWidthHeight">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="Layout.FillWidth.Vertical">
    <item name="android:orientation">vertical</item>
  </style>

  <style name="Layout.FillWidth.Vertical.White">
    <item name="android:background">@android:color/white</item>
  </style>

  <style name="Layout.FillWidth.Vertical.Black">
    <item name="android:background">@android:color/black</item>
  </style>

  <style name="Layout.FillWidthHeight.Vertical">
    <item name="android:orientation">vertical</item>
  </style>

  <style name="Layout.FillWidthHeight.Vertical.White">
    <item name="android:background">@android:color/white</item>
  </style>

  <style name="Layout.WrapWidthHeight.Vertical">
    <item name="android:orientation">vertical</item>
  </style>

  <style name="Layout.Weight">
    <item name="android:layout_weight">1</item>
  </style>

  <style name="Layout.Weight.Width">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="Layout.Weight.Width.Vertical">
    <item name="android:orientation">vertical</item>
  </style>

  <style name="Layout.Weight.WidthFillHeight">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">match_parent</item>
  </style>

  <style name="Layout.Weight.WidthFillHeight.Vertical">
    <item name="android:orientation">vertical</item>
  </style>

  <style name="Layout.Weight.Height">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">0dp</item>
  </style>

  <style name="Layout.Weight.Height.Vertical">
    <item name="android:orientation">vertical</item>
  </style>

  <style name="Layout.Weight.HeightFillWidth">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">0dp</item>
  </style>

  <style name="Layout.Weight.HeightFillWidth.Vertical">
    <item name="android:orientation">vertical</item>
  </style>

  <style name="Button" parent="@style/Layout.WrapWidthHeight">
    <item name="android:minWidth">0dp</item>
    <item name="android:minHeight">0dp</item>
  </style>

  <style name="ToggleButton" parent="Layout.WrapWidthHeight">
    <item name="android:textOn"/>
    <item name="android:textOff"/>
  </style>

  <style name="Text">
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="Text.FillWidth">
    <item name="android:layout_width">match_parent</item>
  </style>

  <style name="Text.FillWidth.Black">
    <item name="android:textColor">@android:color/black</item>
  </style>

  <style name="Text.FillWidth.White">
    <item name="android:textColor">@android:color/white</item>
  </style>

  <style name="Text.WrapWidth">
    <item name="android:layout_width">wrap_content</item>
  </style>

  <style name="Text.WrapWidth.Black">
    <item name="android:textColor">@android:color/black</item>
  </style>

  <style name="Text.WrapWidth.White">
    <item name="android:textColor">@android:color/white</item>
  </style>

  <style name="Text.FillWidth.Bold">
    <item name="android:textStyle">bold</item>
  </style>

  <style name="Text.WrapWidth.Bold">
    <item name="android:textStyle">bold</item>
  </style>

  <style name="Text.FillWidth.Italic">
    <item name="android:textStyle">italic</item>
  </style>

  <style name="Text.WrapWidth.Italic">
    <item name="android:textStyle">italic</item>
  </style>

  <style name="Text.Header" parent="Layout.Weight.Width">
    <item name="android:textSize">@dimen/_18ssp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:singleLine">true</item>
    <item name="android:marqueeRepeatLimit">marquee_forever</item>
    <item name="android:ellipsize">marquee</item>
  </style>

  <style name="Text.Title" parent="Layout.FillWidth">
    <item name="android:textSize">14sp</item>
    <item name="android:singleLine">true</item>
    <item name="android:ellipsize">end</item>
  </style>

  <style name="Text.Title.Bold">
    <item name="android:textStyle">bold</item>
  </style>

  <style name="Text.Title.Bold.Black">
    <item name="android:textColor">@android:color/black</item>
  </style>

  <style name="Text.Title.Black">
    <item name="android:textColor">@android:color/black</item>
  </style>

  <style name="Text.Title.DarkerGray">
    <item name="android:textColor">@android:color/darker_gray</item>
  </style>

  <style name="Text.Title.White">
    <item name="android:textColor">@android:color/white</item>
  </style>

  <style name="Text.Content" parent="Layout.FillWidth">
    <item name="android:textSize">@dimen/_12ssp</item>
  </style>

  <style name="Text.Content.Black">
    <item name="android:textColor">@android:color/black</item>
  </style>

  <style name="Text.Content.DarkerGray">
    <item name="android:textColor">@android:color/darker_gray</item>
  </style>

  <style name="Text.Content.White">
    <item name="android:textColor">@android:color/white</item>
  </style>


  <style name="Text.SubContent" parent="Text.WrapWidth.Italic">
    <item name="android:textColor">@android:color/darker_gray</item>
    <item name="android:textSize">@dimen/_10ssp</item>
  </style>

  <style name="Text.Shadow" parent="Layout.FillWidth">
    <item name="android:gravity">center</item>
    <item name="android:textColor">@android:color/white</item>
    <item name="android:textStyle">bold</item>
    <item name="android:shadowColor">#7F000000</item>
    <item name="android:shadowDx">-1</item>
    <item name="android:shadowDy">-1</item>
    <item name="android:shadowRadius">1</item>
    <item name="android:singleLine">true</item>
    <item name="android:marqueeRepeatLimit">marquee_forever</item>
    <item name="android:ellipsize">marquee</item>
  </style>

  <!-- List View -->
  <style name="ListView" parent="Layout.FillWidthHeight">
    <item name="android:background">@android:color/transparent</item>
    <item name="android:cacheColorHint">@android:color/transparent</item>
    <item name="android:divider">@android:color/transparent</item>
  </style>

  <!-- ProgressBar -->
  <style name="ProgressBar">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_centerInParent">true</item>
  </style>

  <!-- Divider -->
  <style name="Divider">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">1px</item>
    <item name="android:background">#d0d0d0</item>

  </style>

  <style name="DividerWhite">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">@dimen/_2sdp</item>
    <item name="android:background">@android:color/white</item>
  </style>

  <style name="Layout.TextFormatDescriptionEditProfile">
    <item name="android:layout_width">@dimen/_100ssp</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="Layout.divide_screen">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">match_parent</item>
  </style>
</resources>